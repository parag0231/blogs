<% layout('layouts/boilerplate')%>




<div class="row">
    <h1 class="text-center">Edit Blog</h1>
    <div class="col-6 offset-3">
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" novalidate class="validate-form">
            <div class="mb-3">
                <label class="form-label" for ="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]" value="<%=blog.title%>" required>
            </div>
            <div class="mb-3">
                <label  class="form-label" for ="content">Content</label>
                <textarea class="form-control"  id="content" name="blog[content]" required><%=blog.content%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update blog</button>
            </div>
        </form>
    </div>
</div>