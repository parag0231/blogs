<% layout('layouts/boilerplate')%>


<div class="row">
    <h1 class="text-center">Add New Blog</h1>
    <div class="col-8 offset-2">
        <form action="/blogs" method="POST" novalidate class="validate-form">
            <div class="mb-3">
                <label class="form-label" for ="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]" required>
            </div>
            <div class="mb-3">
                <label  class="form-label" for ="content">Content</label>
                <textarea class="form-control"  id="content" name="blog[content]" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add blog</button>
            </div>
        </form>
    </div>
</div>

