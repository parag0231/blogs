<% layout('layouts/boilerplate')%>
<h1>all blogs</h1>

<% for (let blog of blogs){%>
    <div class="card mb-3">
        <div class="row">
            <div class="card-body">
                <h5 class="card-title"><%=blog.title%></h5>
                <p class="card-text"><%=blog.content%></p>
                <a class="btn btn-primary btn-sm" href="/blogs/<%=blog._id%>">Read more</a>
            </div>
        </div>
    </div>
<%}%>    

